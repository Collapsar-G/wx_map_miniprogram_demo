    position: fixed;
    margin: 0px;
    background-size: 100% 100%;
    background-image: url(https://cdn.jsdelivr.net/gh/yexihe-jpg/image/img/timg.gif);
}

.avatar {
    height: 250rpx;
    width: 250rpx;
    border-radius: 0px;
}


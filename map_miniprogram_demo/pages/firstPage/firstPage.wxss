    display: flex;
}

.padding-sm {
    padding: 20rpx;
}

.margin-xs {
    margin: 15rpx;
}

.flex-sub {
    flex: 4;
}

.radius {
    border-radius: 40rpx;
}

.margin-left {
    margin-right: 30rpx;
}

.cu-avatar.lg {
    width: 96rpx;
    height: 96rpx;
